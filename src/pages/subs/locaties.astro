---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import FeaturesList from '../features.astro';
const metadata = {
  title: 'Locaties',
};
---

<Layout metadata={metadata}>

    <Fragment>
  
<script is:inline>

async function initAMap() {
  const { Map } = await google.maps.importLibrary("maps");
  const { AdvancedMarkerElement } = await google.maps.importLibrary("marker");
  const amap = new Map(document.getElementById("gmap_a_canvas"), 
  {
	zoom:14,
	center:new google.maps.LatLng(51.9817756,5.97274),
	mapTypeId: google.maps.MapTypeId.ROADMAP,
	mapId: "Arnhem",
  });
  const marker = new AdvancedMarkerElement({
    map: amap,
    position: { lat:51.9817756, lng: 5.972745 },
  });
  infowindow = new google.maps.InfoWindow({content:'<strong>t Luifeltje</strong><br>Dunoweg 2<br>6825 ED Arnhem<br>'});
  google.maps.event.addListener(marker, 'click', function(){infowindow.open(map,marker);});
  infowindow.open(map,marker);
}
initAMap();
async function initWMap() {
  if (window.wmap) return;
  const { Map } = await google.maps.importLibrary("maps");
  const { AdvancedMarkerElement } = await google.maps.importLibrary("marker");
  const wmap = new Map(document.getElementById("gmap_w_canvas"), 
  {
	zoom:14,
	center:new google.maps.LatLng(51.97455309999999,5.642246500000056),
	mapTypeId: google.maps.MapTypeId.ROADMAP,
	mapId: "Wageningen",
  });
  const marker = new AdvancedMarkerElement({
    map: wmap,
    position: { lat:51.9738447, lng: 5.6441740999999865 },
  });
  infowindow = new google.maps.InfoWindow({content:'<strong>Kenkon</strong><br>Nieuwe kanaal 11<br>6709 PA Wageningen<br>'});
  google.maps.event.addListener(marker, 'click', function(){infowindow.open(map,marker);});
  infowindow.open(map,marker);
}
initWMap();
  
</script>

